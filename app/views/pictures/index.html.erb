<h2>Picture一覧画面</h2>
<%= notice %>
<table>
    <tr>
        <th>Content</th>
        <th>Image</th>
        <th>User</th>
    </tr>
    
    <% @pictures.each do |picture| %>
    
    <tr>
        <td><%= picture.content %></td>
        <td><%= image_tag picture.image.url %></td>
        <td><%= picture.user.name %></td>
        <td><%= link_to 'picture詳細',picture_path(picture.id) %></td>
        <td><%= link_to 'picture編集',edit_picture_path(picture.id) %></td>
        <td><%= link_to 'picture削除',picture_path(picture.id),data: {turbo_method: :delete,turbo_confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
</table>
<%= link_to 'Pictureを投稿する',new_picture_path %>
